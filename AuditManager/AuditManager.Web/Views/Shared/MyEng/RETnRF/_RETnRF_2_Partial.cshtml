<div class="row-fluid col-xs-12 col-md-12 padding-0">
    <div class="row-fluid col-xs-12 col-md-12 padding-0">
        <label class="control-label col-xs-7 col-md-7 col-md-padding-RetNRf" for="txtRFReqDate">
            Required Date <font class="font-asterisk-required"></font> (Date by which the RF is required to be available for delete and approval)
        </label>
        <div class="col-xs-5 col-md-5 col-md-padding-RetNRf">

            <div class="input-group input-append">
                <input class="form-control dtp-Txt dtp-NoWeakEndPastDateNDateOffSet-Txt" id="txtRFReqDate" name="txtRFReqDate" placeholder="Please select date from the calendar" required>
                <span class="input-group-addon dtp-NoWeakEndPastDateNDateOffSet-Btn" style="cursor:pointer;">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>

        </div>
    </div>

    <!-- ko with: selectedWs() -->

    <div class="row-fluid col-xs-12 col-md-12 padding-0">
        <label class="control-label col-xs-7 col-md-7 col-md-padding-RetNRf" for="txtMgrEmail">
            Confirm Engagement manager e-mail: <font class="font-asterisk-required"></font>
        </label>
        <div class="col-xs-5 col-md-5 col-md-padding-RetNRf input-append">

            <!--ko foreach: WsGroups()-->
            <!-- ko if: WsUserType() == 'ADMIN' -->
            <select class="form-control" id="txtMgrEmail" name="txtMgrEmail"
                    data-bind="options: GrpUsers(),
                               optionsText: 'Email',
                               optionsValue: 'Email',
                               value: viewModel.selectedWs().WsProfile().ManagerDesc.Email,
                               optionsCaption: '--Select Manager Email--'" required></select>
            <!-- /ko -->
            <!-- /ko -->

        </div>
    </div>

    <div class="row-fluid col-xs-12 col-md-12 padding-0">
        <label class="control-label col-xs-7 col-md-7 col-md-padding-RetNRf" for="txtParEmail">
            Confirm Engagement partner e-mail: <font class="font-asterisk-required"></font>
        </label>
        <div class="col-xs-5 col-md-5 col-md-padding-RetNRf input-append">

            <!--ko foreach: WsGroups()-->
            <!-- ko if: WsUserType() == 'ADMIN' -->

            <select class="form-control" id="txtParEmail" name="txtParEmail"
                    data-bind="options: GrpUsers(),
                               optionsText: 'Email',
                               optionsValue: 'Email',
                               value: viewModel.selectedWs().WsProfile().PartnerDesc.Email,
                               optionsCaption: '--Select Partner Email--'"
                    required></select>

            <!-- /ko -->
            <!-- /ko -->

        </div>
    </div>

    <!-- /ko -->

</div>

<script type="text/javascript">
    $(function () {
        $("#txtRFReqDate").val(((new Date()).addBusinessDays(daysToOffSet + 1)).ToDate());
    })
</script>
